<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ClarabridgeChat_conversationBackground"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/conversationLoadingSpinner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/conversationLoadingText"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/conversationLoadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/ClarabridgeChat_conversationLoadingText"
        android:textColor="@color/ClarabridgeChat_header"
        android:paddingTop="20dp"
        android:textSize="18sp" />
</RelativeLayout>

