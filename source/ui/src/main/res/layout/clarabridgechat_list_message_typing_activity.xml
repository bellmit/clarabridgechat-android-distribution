<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/ClarabridgeChat_btnActionPaddingHorizontal">

    <View
        android:id="@+id/clarabridgechat_typing_indicator_1"
        android:layout_width="@dimen/ClarabridgeChat_typingIndicatorSize"
        android:layout_height="@dimen/ClarabridgeChat_typingIndicatorSize"
        android:layout_marginEnd="@dimen/ClarabridgeChat_typingIndicatorSeparatorPadding"
        android:layout_marginRight="@dimen/ClarabridgeChat_typingIndicatorSeparatorPadding"
        android:background="@drawable/clarabridgechat_drawable_circle" />

    <View
        android:id="@+id/clarabridgechat_typing_indicator_2"
        android:layout_width="@dimen/ClarabridgeChat_typingIndicatorSize"
        android:layout_height="@dimen/ClarabridgeChat_typingIndicatorSize"
        android:layout_marginEnd="@dimen/ClarabridgeChat_typingIndicatorSeparatorPadding"
        android:layout_marginRight="@dimen/ClarabridgeChat_typingIndicatorSeparatorPadding"
        android:background="@drawable/clarabridgechat_drawable_circle" />

    <View
        android:id="@+id/clarabridgechat_typing_indicator_3"
        android:layout_width="@dimen/ClarabridgeChat_typingIndicatorSize"
        android:layout_height="@dimen/ClarabridgeChat_typingIndicatorSize"
        android:background="@drawable/clarabridgechat_drawable_circle" />

</LinearLayout>
